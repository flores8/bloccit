<%= form_for suggestion do |f| %>

	<div class="form-group">
		<%= f.label :title %>
		<%= f.text_field :title, class: 'form-control', placeholder: "Enter a title of your suggestion." %>
	</div>
	
	<div class="form-group">
		<%= f.label :body %>
		<%= f.text_area :body, class: 'form-control', placeholder: "Please explain in as much details as possible your idea for a tutorial."  %>
	</div>

	<div class="form-group">
		<%= f.submit "Save", class: 'btn btn-success' %>
	</div>
		
<% end %>